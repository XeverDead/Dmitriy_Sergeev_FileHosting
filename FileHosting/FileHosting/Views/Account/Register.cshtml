@{
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@await Html.PartialAsync("_Scripts")

@model Web.ViewModels.RegisterModel

<form asp-action="Register" asp-controller="Account" method="post">
    <div class="container w-25 d-grid gap-3">
        <h1 class="text-center">Registration</h1>
        <div class="validation text-center" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Email" class="form-label">Email</label><br />
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Login" class="form-label">Login</label><br />
            <input type="text" asp-for="Login" class="form-control" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label><br />
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label><br />
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Register" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
