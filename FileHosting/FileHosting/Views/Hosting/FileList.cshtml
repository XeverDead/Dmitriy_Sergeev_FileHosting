@{
    Layout = "_Layout";
    ViewData["Title"] = "File list";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<Common.Models.HostingFile>

<head>
    <title>@ViewData["Title"]</title>
</head>

<div class="d-grid gap-3">
    <h1 class="text-center">File list</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Size(bytes)</th>
                <th scope="col">Category</th>
                <th scope="col">Author link</th>
                <th scope="col">File link</th>
            </tr>
        </thead>
        @{
            foreach (var file in Model)
            {
                <tr>
                    <td>@file.Id</td>
                    <td>@file.Name</td>
                    <td>@file.Size</td>
                    <td>@file.Category</td>
                    <td>@Html.ActionLink("Userpage", "UserPage", "Hosting", new { userId = file.AuthorId })</td>
                    <td>@Html.ActionLink("Filepage", "FilePage", "Hosting", new { fileId = file.Id })</td>
                </tr>
            }
        }
    </table>
</div>

