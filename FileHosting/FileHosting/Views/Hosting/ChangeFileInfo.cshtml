@{
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@await Html.PartialAsync("_Scripts")

@model Web.ViewModels.FileInfoModel

<form asp-action="ChangeFileInfo" asp-controller="Hosting" method="post">
    <div class="container w-25 d-grid gap-3">
        <h1 class="text-center">Change file info</h1>
        <div class="validation text-center" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group">
            <label asp-for="Name" class="form-label">Name</label><br />
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Category" class="form-label">Category</label><br />
            <input type="text" asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label><br />
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" />
        </div>
        <div class="form-group clearfix">
            <input type="submit" value="Save" class="btn btn-outline-dark float-start" />
            <a asp-action="FilePage" asp-controller="Hosting" asp-route-fileId="@Model.Id" class="btn btn-outline-dark float-end">Cancel</a>
        </div>
    </div>
</form>