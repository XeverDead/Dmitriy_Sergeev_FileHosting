@{
    Layout = "_Layout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<Common.Models.User>

<h2>Users:</h2>
<br />

<form asp-action="Register" asp-controller="Account" method="get">
    <input type="submit" value="Register new user" />
</form>

<form asp-action="UsersSearch" asp-controller="Hosting" method="get">
    <input type="submit" value="Find user" />
</form>

<form asp-action="FilesSearch" asp-controller="Hosting" method="get">
    <input type="submit" value="Find file" />
</form>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Nickname</td>
        <td>Role</td>
        <td>Link</td>
    </tr>
    @{
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Login</td>
                <td>@user.RoleName</td>
                <td>@Html.ActionLink("Userpage", "UserPage","Hosting", new { userId = user.Id })</td>
            </tr>
        }
    }
</table>

