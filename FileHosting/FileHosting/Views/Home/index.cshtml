@{ 
    Layout = "_Layout";
}

@model IEnumerable<Common.Models.User>

<h2>Users:</h2>
<br />

<form action="Home/Register">
    <input type="submit" value="Register new user" />
</form>

    <table class="table">
        <tr>
            <td>Id</td>
            <td>Email</td>
            <td>Login</td>
            <td>Role</td>
        </tr>
        @{ 
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.Login</td>
                    <td>@user.RoleName</td>
                </tr>
            }
        }
    </table>

<form action="Home/Secret">
    <input type = "submit" value = "Push" />
</form>

